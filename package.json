{
  "name": "@kevintyj/prlint",
  "version": "1.1.0",
  "type": "module",
  "private": false,
  "author": "Kevin Taeyoon Jin <hello@kevintyj.com>",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/kevintyj/prlint#readme",
  "repository": "github:kevintyj/prlint",
  "bugs": {
    "url": "https://github.com/kevintyj/prlint/issues"
  },
  "keywords": [
    "changesets",
    "conventional",
    "github"
  ],
  "publishConfig": {
    "provenance": true
  },
  "exports": {
    "default": "./dist/index.js"
  },
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "watch": "tsup --watch",
    "rename:js": "npx rename-cli 'dist/index.js' 'index.mjs'",
    "rename:ts": "npx ncp 'tsconfig.json' 'tsconfig.build-temp.json'",
    "json:ts:pre": "json -I -f tsconfig.build.json -e 'this.extends = \"./tsconfig.build-temp.json\"' && npx ncp 'tsconfig.build.json' 'tsconfig.json'",
    "json:ts:post": "json -I -f tsconfig.build.json -e 'this.extends = \"./tsconfig.json\"' && npx ncp 'tsconfig.build-temp.json' 'tsconfig.json'",
    "schema:post": "npx ncp 'node_modules/@commitlint/config-validator/lib/commitlint.schema.json' 'dist/commitlint.schema.json'",
    "json:ts": "pnpm run rename:ts && pnpm run json:ts:pre",
    "shim": "node scripts/shim.cjs",
    "prebuild": "pnpm run clean:build && pnpm run json:ts",
    "build": "pnpm run test:coverage && pnpm run prebuild && ncc build src/index.ts -o dist && pnpm run shim && pnpm run postbuild",
    "postbuild": "pnpm run json:ts:post && npx rimraf 'tsconfig.build-temp.json' && npx rimraf 'commitlint-action.config.mjs' && pnpm run rename:js && pnpm run schema:post",
    "test": "vitest",
    "test:coverage": "vitest run --coverage.enabled --coverage.reporter='json' ",
    "lint:es": "eslint .",
    "clean:build": "rimraf lib dist",
    "clean:git": "git clean -fdX",
    "ci": "pnpm run lint:es && vitest run && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/config-validator": "^19.0.3",
    "@commitlint/lint": "^19.2.2",
    "@commitlint/load": "^19.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/types": "^19.0.3",
    "@types/node": "^20.9.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "json": "^11.0.0",
    "lint-staged": "^15.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "packageManager": "pnpm@9.4.0"
}
